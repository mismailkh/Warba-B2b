@page "/save-organization"
@page "/save-organization/{OrganizationTypeId:int?}"
@page "/save-organization/{OrganizationId}"
@layout MainLayout
@using WB.Shared.Dtos.Organization.RequestDtos;
@using WB.Shared.Enums

<PageTitle>@(OrganizationDetail.Id == null ? "Add Organization" : "Update Organization")</PageTitle>

<div class="container-fluid">
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <h1 class="page-title fw-semibold fs-18 mb-0">@(OrganizationDetail.Id == null ? "Add Organization" : "Update Organization")</h1>
        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Organizations</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@(OrganizationDetail.Id == null ? "Add Organization" : "Update Organization")</li>
                </ol>
            </nav>
        </div>
    </div>
    <RadzenTemplateForm Data="OrganizationDetail" TItem="SaveOrganizationRequestDto" Submit="@OnSubmitSaveOrganization">
        <div class="card custom-card mt-3">
            <div class="card-header">
                <div class="card-title">Organization Details</div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-xl-6">
                        <label class="form-label d-block">Organization Type</label>
                        <RadzenDropDown class="w-100" TValue="int" Data="OrganizationTypes" TextProperty="Name" ValueProperty="Id" @bind-Value="OrganizationDetail.TypeId" Disabled="@(OrganizationTypeId != null || OrganizationId != null)" />
                    </div>
                    <div class="col-xl-6">
                        <label class="form-label d-block">Status</label>
                        <label class="form-label text-muted pr-3 mt-2 me-3">@(OrganizationDetail.IsActive ? "Active" : "In Active")</label>
                        <RadzenSwitch @bind-Value="OrganizationDetail.IsActive" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-xl-6">
                        <label class="form-label d-block">Name (English)</label>
                        <RadzenTextBox Name="OrganizationNameEn" @bind-Value="OrganizationDetail.NameEn" Placeholder="Organization Name (En)" />
                        <RadzenRequiredValidator Component="OrganizationNameEn" Text="Required Field" />
                    </div>
                    <div class="col-xl-6">
                        <label class="form-label d-block">Name (Arabic)</label>
                        <RadzenTextBox Name="OrganizationNameAr" @bind-Value="OrganizationDetail.NameAr" Placeholder="Organization Name (Ar)" />
                        <RadzenRequiredValidator Component="OrganizationNameAr" Text="Required Field" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-xl-12">
                        <label class="form-label d-block">Description</label>
                        <RadzenTextArea Name="Description" rows="1" @bind-Value="OrganizationDetail.Description" />
                    </div>
                    
                </div>
                <div class="row mb-3">
                    <div class="col-xl-6">
                        <label class="form-label d-block">Brokerage Code</label>
                        <RadzenTextBox Name="BrokerageCode" @bind-Value="OrganizationDetail.BrokerageCode" Placeholder="Brokerage Code" />
                        <RadzenRequiredValidator Component="BrokerageCode" Text="Required Field" />
                    </div>
                    <div class="col-xl-6">
                        <label class="form-label d-block">Organization Logo</label>
                    </div>
                </div>
                @if (OrganizationDetail.TypeId != (int)GeneralEnums.OrganizationTypeEnum.Internal)
                {
                    <div class="row g-3 align-items-center mb-3">
                        <label class="form-label d-block">Payment Method</label>
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <div class="d-flex align-items-center justify-content-between flex-wrap">
                                <div class="d-flex align-items-center">
                                    <RadzenCheckBox TValue="bool"
                                                    @bind-Value="@IsCashSelected"
                                                    Change="(args) => OnPaymentMethodToggled(args, (int)GeneralEnums.PaymentMethodEnum.Cash)" />
                                    <label class="ms-2 fw-semibold mb-0 mt-1">Cash</label>
                                </div>

                                @if (OrganizationDetail.PaymentMethods.Any(p => p.MethodId == (int)GeneralEnums.PaymentMethodEnum.Cash))
                                {
                                    var cashMethod = OrganizationDetail.PaymentMethods
                                    .First(p => p.MethodId == (int)GeneralEnums.PaymentMethodEnum.Cash);

                                    <div class="flex-grow-1 ms-3 mt-2 mt-sm-0">
                                        <RadzenTextBox Name="ClientCode"
                                                       @bind-Value="cashMethod.Code"
                                                       Placeholder="Client Code"
                                                       Style="width: 100%;" />
                                        <RadzenRequiredValidator Component="ClientCode"
                                                                 Text="Required Field"
                                                                 Visible="true" />
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <div class="d-flex align-items-center justify-content-between flex-wrap">
                                <div class="d-flex align-items-center">
                                    <RadzenCheckBox TValue="bool"
                                                    @bind-Value="@IsCreditSelected"
                                                    Change="(args) => OnPaymentMethodToggled(args, (int)GeneralEnums.PaymentMethodEnum.Credit)" />
                                    <label class="ms-2 fw-semibold mb-0 mt-1">Credit</label>
                                </div>

                                @if (OrganizationDetail.PaymentMethods.Any(p => p.MethodId == (int)GeneralEnums.PaymentMethodEnum.Credit))
                                {
                                    var creditMethod = OrganizationDetail.PaymentMethods
                                    .First(p => p.MethodId == (int)GeneralEnums.PaymentMethodEnum.Credit);

                                    <div class="flex-grow-1 ms-3 mt-2 mt-sm-0">
                                        <RadzenTextBox Name="CreditCode"
                                                       @bind-Value="creditMethod.Code"
                                                       Placeholder="Credit Code"
                                                       Style="width: 100%;" />
                                        <RadzenRequiredValidator Component="CreditCode"
                                                                 Text="Required Field"
                                                                 Visible="true" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @if (OrganizationDetail.PaymentMethods.Any(p => p.MethodId == (int)GeneralEnums.PaymentMethodEnum.Credit))
                    {
                        <div class="row mb-3">
                            <div class="col-xl-6">
                                <div class="d-flex align-items-center">
                                    <RadzenCheckBox class="me-3" @bind-Value="OrganizationDetail.IsDirectPurchaseAllowed" />
                                    <label class="form-label mt-2">Allow Direct Purchase For Credit Customer</label>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="card custom-card mt-3">
            <div class="card-header">
                <div class="card-title">LOB Details</div>
            </div>
            <div class="card-body">
            </div>
        </div>
        @if (OrganizationDetail.TypeId != (int)GeneralEnums.OrganizationTypeEnum.Internal)
        {
            <div class="card custom-card mt-3">
                <div class="card-header">
                    <div class="card-title">Product Package Details</div>
                </div>
                <div class="card-body">
                </div>
            </div>
        }
        <div class="d-flex justify-content-end mt-3 gap-3 pb-2">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Submit" ButtonType="ButtonType.Submit" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Click="OnSubmitCancelled" />
        </div>
    </RadzenTemplateForm>
</div>