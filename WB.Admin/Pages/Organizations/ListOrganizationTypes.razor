@page "/organization-types"
@layout MainLayout
@using WB.Shared.Dtos.Organization.ResponseDtos;

<PageTitle>Organization Types</PageTitle>

<div class="container-fluid">
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <h1 class="page-title fw-semibold fs-18 mb-0">Organization Types</h1>
        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Organization Types</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header  justify-content-between">
                    <div class="card-title">
                        List of Organization Types
                    </div>
                    <div class="d-flex">
                        <div class="me-3">
                            <RadzenTextBox class="form-control form-control-sm"
                                           Name="SearchInput" Placeholder="Search Here"
                                           @oninput="@(async (args) => { search = $"{args.Value}"; await OrganizationTypesGrid.GoToPage(0); await OnSearchInput(); })" />
                        </div>
                        @* <RadzenButton class="btn btn-primary btn-sm btn-wave me-3" ButtonType="ButtonType.Button" Icon="ri-add-line" Text="Add Organization" Click="@(() => navigationManager.NavigateTo("/save-organization"))" /> *@
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive mb-4">
                        <div class="table text-nowrap table-hover border table-bordered">
                            <RadzenDataGrid TItem="OrganizationTypesListResponseDto"
                                            Data="FilteredOrganizationTypesList"
                                            Count="@(FilteredOrganizationTypesList?.Count ?? 0)"
                                            AllowPaging="true"
                                            PageSize="@systemSettingState.PageSize"
                                            PagerHorizontalAlign="Radzen.HorizontalAlign.Center"
                                            PageSizeText="@translationState.Translate("Items_Per_Page")"
                                            PageSizeOptions="@systemSettingState.PageSizeOptions"
                                            PagingSummaryFormat="@(translationState.PageSummaryFormat != null ? translationState.PageSummaryFormat : "")"
                                            ShowPagingSummary="true">
                                <Columns>
                                    <RadzenDataGridColumn TItem="OrganizationTypesListResponseDto" Property="NameEn" Title="Organization Name (English)" />
                                    <RadzenDataGridColumn TItem="OrganizationTypesListResponseDto" Property="NameAr" Title="Organization Name (Arabic)" />
                                    <RadzenDataGridColumn TItem="OrganizationTypesListResponseDto" Property="CreatedDate" Title="Created" />
                                    <RadzenDataGridColumn TItem="OrganizationTypesListResponseDto" Title="Action" Sortable="false" CssClass="text-center" Width="100px">
                                        <Template Context="item">
                                            <a aria-label="anchor" @onclick="@(() => OpenDetailOrganizationTypeDialog(item.Id))" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-success-light"><i class="ri-eye-line"></i></a>
                                            <a aria-label="anchor" @onclick="@(()=> OpenEditOrganizationTypeDialog(item.Id))" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-success-light"><i class="ri-pencil-line"></i></a>
                                            <a aria-label="anchor" @onclick="@(() => navigationManager.NavigateTo($"/organizations/{item.Id}"))" class="btn btn-icon btn-wave waves-effect waves-light btn-sm btn-primary-light"><i class="ri-node-tree"></i></a>
                                        </Template>
                                    </RadzenDataGridColumn>
                                </Columns>
                            </RadzenDataGrid>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>