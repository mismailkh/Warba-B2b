<div>
    <div class="d-flex align-items-center">
        <div class="flex-shrink-0">
            @if (!string.IsNullOrEmpty(ProfilePicUrl))
            {
                <img src="@ProfilePicUrl" alt="img" width="32" height="32" class="avatar avatar-sm rounded-circle">
            }
            else
            {
                <span class="avatar avatar-sm me-2 avatar-rounded bg-primary">
                    @FullName[0].ToString().ToUpper()
                </span>
            }
        </div>
        <div class="flex-grow-1 ms-2 text-truncate" style="max-width:100% !important" title="@FullName">@FullName</div>
    </div>
</div>

@code {
    [Parameter]
    public string? ProfilePicUrl { set; get; }
    [Parameter]
    public string FullName { set; get; }
}
