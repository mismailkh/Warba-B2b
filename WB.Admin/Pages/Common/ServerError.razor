@layout CustomLayout
<div class="page error-bg" id="particles-js">
    <!-- Start::error-page -->
    <div class="error-page">
        <div class="container">
            <div class="text-center p-5 my-auto">
                <div class="row align-items-center justify-content-center h-100">
                    <div class="col-xl-7">
                        <p class="error-text mb-sm-0 mb-2">500</p>
                        <p class="fs-18 fw-semibold mb-3">Internal Server Error</p>
                        <div class="row justify-content-center mb-5">
                            <div class="col-xl-12">
                                @if (IsDatabaseError)
                                {
                                    <p class="text-muted mt-3" style="direction: ltr;">Could not connect to the <b>Database</b>. Please check the connection string and app configurations etc.</p>
                                }
                                else
                                {
                                    <p class="text-muted mt-3" style="direction: ltr;">Why not try refreshing your page? or you can contact <b>Support</b></p>
                                }
                            </div>
                        </div>
                        <a href="#" onclick="window.location.reload(true);" class="btn btn-primary"><i class="ri-restart-line align-middle me-1 d-inline-block"></i>RETRY</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public bool IsDatabaseError { get; set; }
}
<script src="../assets/libs/particles.js/particles.js"></script>
<script src="../assets/js/error.js"></script>