@page "/lobs"
@inject ProductListService ProductListService
@inject NavigationManager NavigationManager

<div class="container-fluid">

    <!-- Page Header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <h1 class="page-title fw-semibold fs-18 mb-0">Line of Business</h1>
        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">LOBs</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header Close -->
    <!-- Start::row-1 -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header  justify-content-between">
                    <div class="card-title">
                        List LOBs
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive mb-4">
                        <table class="table text-nowrap table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">LOB Name (En)</th>
                                    <th scope="col">LOB Name (Ar)</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="product-list">
                                    <td>Motor Comprehensive En</td>
                                    <td>Motor Comprehensive Ar</td>
                                    <td>
                                        <div class="hstack gap-2 fs-15">
                                            <a href="javascript:void(0)" class="btn btn-icon btn-sm btn-info-light"><i class="ri-edit-line"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="product-list">
                                    <td>Motor TPL En</td>
                                    <td>Motor TPL Ar</td>
                                    <td>
                                        <div class="hstack gap-2 fs-15">
                                            <a href="javascript:void(0)" class="btn btn-icon btn-sm btn-info-light"><i class="ri-edit-line"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="product-list">
                                    <td>Travel En</td>
                                    <td>Travel Ar</td>
                                    <td>
                                        <div class="hstack gap-2 fs-15">
                                            <a href="javascript:void(0)" class="btn btn-icon btn-sm btn-info-light"><i class="ri-edit-line"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="product-list">
                                    <td>Marine TPL En</td>
                                    <td>Marine TPL Ar</td>
                                    <td>
                                        <div class="hstack gap-2 fs-15">
                                            <a href="javascript:void(0)" class="btn btn-icon btn-sm btn-info-light"><i class="ri-edit-line"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End::row-1 -->

</div>
@code {
    protected async Task DeleteProductList(ProductList ProductId)
    {
        ProductListService.DeleteProductList(ProductId?.ProductId);
        await Task.Delay(1000);
        NavigationManager.NavigateTo("/products-list", forceLoad: false);
    }
    private bool selectAll;
    private void ToggleSelectAll()
    {
        selectAll = !selectAll;
        foreach (var ProductList in ProductListService.GetProductLists())
        {
            ProductList.Selected = selectAll;
        }
    }
}
